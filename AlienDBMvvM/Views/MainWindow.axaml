<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:AlienDBMvvM.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="AlienDBMvvM.Views.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Height="450"
        Width="800"
        Icon="/Assets/avalonia-logo.ico"
        Title="AlienDBMvvM">

    <Design.DataContext>
        <!-- This only sets the DataContext for the previewer in an IDE,
             to set the actual DataContext for runtime, set the DataContext property in code (look at App.axaml.cs) -->
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <StackPanel Margin="20" Spacing="20">
        
        <TextBlock 
            Text="Filmy Alien" 
            FontSize="20" 
            Margin="10"
            HorizontalAlignment="Center"/>
        
        <Grid 
            ColumnDefinitions="*,*,*" 
            RowDefinitions="Auto, Auto, Auto"
            Margin="50, 0">
            <ListBox 
                Grid.ColumnSpan="3" 
                ItemsSource="{Binding Films}">
                
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding PolishTitle, StringFormat=| {0} |}"/>
                            <TextBlock Text="{Binding Rating, StringFormat=Ocena: {0}/10}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <Button
                Grid.Column="0"
                Grid.Row="1"
                Content="Dodaj Film"
                Margin="10"
                Background="LimeGreen"
                HorizontalAlignment="Right"/>
            
            <Button
                Grid.Column="1"
                Grid.Row="1"
                Content="Usuń Film"
                Margin="10"
                Background="Red"
                HorizontalAlignment="Center"/>
            
            <Button
                Grid.Column="2"
                Grid.Row="1"
                Content="Szczegóły"
                Margin="10"
                Background="CornflowerBlue"
                HorizontalAlignment="Left"/>
            
        </Grid>
    </StackPanel>
</Window>
